<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".top"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/parentRelativea"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/zz"
                />

            <TextView
                android:layout_toRightOf="@id/image"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:text="_vlpolina_"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrr"
            android:layout_below="@id/parentRelativea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/im"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/xm"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/im"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                android:layout_toRightOf="@id/text1"
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="87"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                android:layout_toRightOf="@id/text2"
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="95"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text4"
                android:layout_below="@id/text1"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/im"
                android:text="Публикации"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/text5"
                android:layout_below="@id/text2"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/text4"
                android:text="Подписчики"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/text6"
                android:layout_below="@id/text3"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/text5"
                android:text="Подписки"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text7"
            android:layout_below="@id/im"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="Полина"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_below="@id/text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bb"
                android:layout_width="300dp"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/prof"
                android:baselineAligned="false"
                android:fontFamily="sans-serif"
                android:text="Редактировать профиль"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_toRightOf="@id/bb"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:background="@drawable/prof"
                android:baselineAligned="false"
                android:fontFamily="sans-serif-medium"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/ttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="Актуальные истории \nСохраняйте свои лучшие истории в профиле"
            android:textColor="@color/white"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hh"
            />

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp">

        </GridView>

    </LinearLayout>

</ScrollView>